def set2mapper(set):
	if set == 'Homo_sapiens':
		return 'references/gtf/hs-homo_sapiens_anno.gtf.gz'
	elif set == 'Mus_musculus':
		return 'references/gtf/mm-mus_musculus_anno.gtf.gz'
	else:
		return 'references/ENSG2gene_name.tsv.gz'

